[credential]
	helper = osxkeychain
[push]
	default = simple
[alias]
  a = add .
  c = commit -m
  am = commit --amend
  ps = push
  pl = pull

  b = branch
  co = checkout
  nb = checkout -b
  pushb = push --set-upstream origin 		# push new branch to remote

  s = status
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[include]
  	path = .gitconfig.user
